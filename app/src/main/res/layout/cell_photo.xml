<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/photoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitCenter"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31313111"
        app:layout_constraintLeft_toLeftOf="@+id/photoImage"
        app:layout_constraintRight_toRightOf="@+id/photoImage"
        app:layout_constraintTop_toTopOf="@id/photoImage"
        app:layout_constraintBottom_toBottomOf="@id/photoImage"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12121211"
        app:layout_constraintTop_toBottomOf="@+id/id"
        app:layout_constraintRight_toRightOf="@+id/photoImage"
        app:layout_constraintBottom_toBottomOf="@id/photoImage"
        app:layout_constraintLeft_toLeftOf="@id/photoImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>
